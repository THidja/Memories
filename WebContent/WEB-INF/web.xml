  <servlet>
  	<servlet-name>GetPicture</servlet-name>
  	<servlet-class>services.servlets.pictures.GetPicture</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>GetPicture</servlet-name>
   <url-pattern>/picture/get</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SetPicture</servlet-name>
    <servlet-class>services.servlets.pictures.SetPicture</servlet-class>
    <multipart-config>
      <location>/</location> 
      <max-file-size>10485760</max-file-size> <!-- 10 Mo -->
      <max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
      <file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
    </multipart-config>
  </servlet>
  <servlet-mapping>
   <servlet-name>SetPicture</servlet-name>
   <url-pattern>/picture/set</url-pattern>
  </servlet-mapping>
